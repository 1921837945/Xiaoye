<?php
$con = mysqli_connect("localhost","root","");
if (!$con)
{
    die('Could not connect: ' . mysqli_error($con));
}

$sj = date("Y/m/d h:i:sa");
$sql = "CREATE TABLE liuyan
(
lou varchar(10),
writer varchar(15),
content varchar(300),
sj varchar(30)
)";

if (!mysqli_query($con,$sql))
{
    die('Error: ' . mysqli_error($con));
}

mysqli_close($con);
?>
